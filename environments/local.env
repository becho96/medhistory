# ==================================================
# MedHistory - Локальная среда разработки
# ==================================================
# Этот файл - шаблон для локальной разработки
# Скопируйте его в корень проекта как .env.local
# Команда: cp environments/local.env .env.local
# ==================================================

# Идентификатор среды
ENVIRONMENT=development

# ==================================================
# База данных PostgreSQL
# ==================================================
POSTGRES_DB=medhistory
POSTGRES_USER=medhistory_user
POSTGRES_PASSWORD=medhistory_local_pass

# ==================================================
# База данных MongoDB
# ==================================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_PASSWORD=mongodb_local_pass
MONGO_INITDB_DATABASE=medhistory

# ==================================================
# MinIO Object Storage
# ==================================================
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_local_pass_123

# ==================================================
# OpenRouter AI (получить ключ: https://openrouter.ai/keys)
# ==================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ==================================================
# JWT Authentication
# ==================================================
JWT_SECRET=jwt_local_secret_key_for_development_only

# ==================================================
# Frontend Configuration
# ==================================================
VITE_API_URL=http://localhost:8000


# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
